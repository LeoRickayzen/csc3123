{% extends 'page.twig' %}

{% block main %}
    <div class = "row">
        <div class = "Jumbotron">
            <div class = "row text-center">
                <h1>Welcome!</h1>
            </div>
            <div class = "well">
                <h2 class = 'text-center'>Your choices so far:</h2>
                {% set i = 0 %}
                {% for topic in topicChoices %}
                    {% set i = i + 1 %}
                    {{i}}: {{topic.title}}<br>
                {% endfor %}
            </div>
            <div class = "row text-center">
                <a href="{{base}}/theme"><button type="button" class="btn btn-primary">Continue</button></a>
            </div>
        </div>
    </div>
{% endblock main %}
