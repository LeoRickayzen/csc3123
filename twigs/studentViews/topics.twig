{% extends 'page.twig' %}

{% block header %}
    <div class="col-md-12">
	<h1 class="cntr">Select a topic</h1>
    </div>
{% endblock header %}

{% block main %}
    <section class="row">
        <div class = "col-md-8">
            {% for topic in topics %}
                <div class = "well">
                    <h2>{{topic.title}}</h2>
                    <p>{{topic.description}}</p>
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Choose
                        <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            {% for i in 1..10 %}
                                <li><a>choice {{i}}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class = "well col-md-4">
            <h2>Your choices so far:</h2>
            {% set i = 0 %}
            {% for topic in topicChoices %}
                {% set i = i + 1 %}
                {{i}}: {{topic.title}}<br>
            {% endfor %}
        </div>
    </section>
{% endblock main %}