{% extends 'page.twig' %}

{% block header %}
    <div class="col-md-12">
	<h1 class="cntr">Allocate topics</h1>
    </div>
{% endblock header %}

{% block main %}
    <section>
        <form action = "{{base}}/allocate/topic" method = "post">
            <div class = "well">
                <span class = "col-md-2">student id</span>
                <span class = "col-md-2">email address</span>
                {% for student in students %}
                    <br>
                    <p class = "row">
                        <span class = "col-md-2">{{student.id}}</span>
                        <span class = "col-md-2">{{student.email}}</span>
                        <div class="form-group col-md-2">
                            <select class="form-control" name = "topicStudent">
                            {% set i = 0 %}
                            {% for topic in student.ownChoices %}
                                {% set i = i + 1 %}
                                <option value = "{{topic.id}},{{student.id}}" >{{i}}: {{topic.title}}</option>
                            {% endfor %}
                            </select>
                        </div>
                    </p>
                {% endfor %}
            </div>
            <div class = "well">
                <button class = "btn btn-primary" type="submit" value = "Submit">Submit selections</button>
            </div> 
        </form>
    </section>
{% endblock main %}